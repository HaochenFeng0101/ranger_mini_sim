<?xml version="1.0"?>
<launch>

  <!-- these are the arguments you can pass this launch file, for example paused:=true -->
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>

  <!-- Launch Empty World -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="worlds/empty.world"/>
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="headless" value="$(arg headless)"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>

  <!-- Load the URDF description into the ROS Parameter Server -->
  <param name="robot_description_xray_detector" 
         command="$(find xacro)/xacro '$(find ranger_mini_v2_gazebo)/xacro/ranger_mini_xray_detector.xacro'" />
  
  <!-- Set the global robot_description parameter for compatibility -->
  <param name="robot_description" 
         command="$(find xacro)/xacro '$(find ranger_mini_v2_gazebo)/xacro/ranger_mini_xray_detector.xacro'" />

  <!-- Spawn X-ray Detector Robot -->
  <node name="spawn_xray_detector" pkg="gazebo_ros" type="spawn_model" 
        args="-urdf -param robot_description_xray_detector -model xray_detector_robot -x 0 -y 0 -z 0.4 -R 0.0 -P 0.0 -Y 0.0"
        output="screen" />

  <!-- Load and start the controllers -->
  <rosparam file="$(find ranger_mini_control)/config/controller_v2.yaml" command="load" ns="xray_detector"/>
  <rosparam file="$(find ranger_mini_control)/config/pid_gains_xray_detector.yaml" command="load"/>
  
  <!-- Set robot description in the xray_detector namespace for the controller -->
  <param name="xray_detector/robot_description" 
         command="$(find xacro)/xacro '$(find ranger_mini_v2_gazebo)/xacro/ranger_mini_xray_detector.xacro'" />
  
  <node name="controller_spawner" pkg="controller_manager" type="spawner" 
        args="joint_state_controller four_wheel_steering_controller" ns="xray_detector" output="screen" />
  
  <node name="robot_state_publisher" 
        pkg="robot_state_publisher" 
        type="robot_state_publisher">
    <remap from="joint_states" to="xray_detector/joint_states"/>
  </node>

  <!-- Static transform from map to base_link -->
  <node name="static_transform_publisher" pkg="tf" type="static_transform_publisher"
        args="0 0 0 0 0 0 map base_link 100" />

  <!-- Launch Simple Keyboard Teleop -->
  <node pkg="se2_control" type="xray_detector_simple_teleop.py" name="xray_detector_simple_teleop" output="screen"/>

  <!-- Launch RViz for X-ray Detector Robot -->
  <node name="rviz_xray_detector" pkg="rviz" type="rviz"
        args="-d $(find ranger_mini_v2_gazebo)/rviz/xray_detector_robot.rviz" />

</launch> 