<?xml version="1.0"?>
<launch>

  <!-- these are the arguments you can pass this launch file, for example paused:=true -->
  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>

  <!-- Launch Empty World -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="worlds/empty.world"/>
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="headless" value="$(arg headless)"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>

  <!-- ===== X-RAY SOURCE ROBOT ===== -->
  <!-- Load X-ray Source URDF -->
  <param name="xray_source_description" 
         command="$(find xacro)/xacro '$(find ranger_mini_v2_gazebo)/xacro/ranger_mini_xray_source.xacro'" />

  <!-- Spawn X-ray Source Robot -->
  <node name="spawn_xray_source" pkg="gazebo_ros" type="spawn_model" 
        args="-urdf -param xray_source_description -model xray_source_robot -x -5 -y 0 -z 0.4 -R 0.0 -P 0.0 -Y 0.0"
        output="screen" launch-prefix="bash -c 'sleep 2; $0 $@'" />

  <!-- X-ray Source Robot State Publishers -->
  <group ns="xray_source">
    <param name="robot_description" 
           command="$(find xacro)/xacro '$(find ranger_mini_v2_gazebo)/xacro/ranger_mini_xray_source.xacro'" />
    <node name="joint_state_publisher" 
          pkg="joint_state_publisher" 
          type="joint_state_publisher" />
    <node name="robot_state_publisher" 
          pkg="robot_state_publisher" 
          type="robot_state_publisher" />
  </group>

  <!-- ===== X-RAY DETECTOR ROBOT ===== -->
  <!-- Load X-ray Detector URDF -->
  <param name="xray_detector_description" 
         command="$(find xacro)/xacro '$(find ranger_mini_v2_gazebo)/xacro/ranger_mini_xray_detector.xacro'" />

  <!-- Spawn X-ray Detector Robot -->
  <node name="spawn_xray_detector" pkg="gazebo_ros" type="spawn_model" 
        args="-urdf -param xray_detector_description -model xray_detector_robot -x 5 -y 0 -z 0.4 -R 0.0 -P 0.0 -Y 0.0"
        output="screen" launch-prefix="bash -c 'sleep 4; $0 $@'" />

  <!-- X-ray Detector Robot State Publishers -->
  <group ns="xray_detector">
    <param name="robot_description" 
           command="$(find xacro)/xacro '$(find ranger_mini_v2_gazebo)/xacro/ranger_mini_xray_detector.xacro'" />
    <node name="joint_state_publisher" 
          pkg="joint_state_publisher" 
          type="joint_state_publisher" />
    <node name="robot_state_publisher" 
          pkg="robot_state_publisher" 
          type="robot_state_publisher" />
  </group>

  <!-- ===== BED TROLLEY ROBOT ===== -->
  <!-- Load Bed Trolley URDF -->
  <param name="bed_trolley_description" 
         command="$(find xacro)/xacro '$(find ranger_mini_v2_gazebo)/xacro/ranger_mini_bed_trolly.xacro'" />

  <!-- Spawn Bed Trolley Robot -->
  <node name="spawn_bed_trolley" pkg="gazebo_ros" type="spawn_model" 
        args="-urdf -param bed_trolley_description -model bed_trolley_robot -x 0 -y 0 -z 0.4 -R 0.0 -P 0.0 -Y 0.0"
        output="screen" launch-prefix="bash -c 'sleep 6; $0 $@'" />

  <!-- Bed Trolley Robot State Publishers -->
  <group ns="bed_trolley">
    <param name="robot_description" 
           command="$(find xacro)/xacro '$(find ranger_mini_v2_gazebo)/xacro/ranger_mini_bed_trolly.xacro'" />
    <node name="joint_state_publisher" 
          pkg="joint_state_publisher" 
          type="joint_state_publisher" />
    <node name="robot_state_publisher" 
          pkg="robot_state_publisher" 
          type="robot_state_publisher" />
  </group>

  <!-- Launch 3 separate RViz windows for each robot -->
  <!-- X-ray Source Robot RViz -->
  <node name="rviz_xray_source" pkg="rviz" type="rviz"
        args="-d $(find ranger_mini_v2_gazebo)/rviz/xray_source_robot.rviz" 
        launch-prefix="bash -c 'sleep 8; $0 $@'" />
  
  <!-- X-ray Detector Robot RViz -->
  <node name="rviz_xray_detector" pkg="rviz" type="rviz"
        args="-d $(find ranger_mini_v2_gazebo)/rviz/xray_detector_robot.rviz" 
        launch-prefix="bash -c 'sleep 10; $0 $@'" />
  
  <!-- Bed Trolley Robot RViz -->
  <node name="rviz_bed_trolley" pkg="rviz" type="rviz"
        args="-d $(find ranger_mini_v2_gazebo)/rviz/bed_trolley_robot.rviz" 
        launch-prefix="bash -c 'sleep 12; $0 $@'" />

</launch> 