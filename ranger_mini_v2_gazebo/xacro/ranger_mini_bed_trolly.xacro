	<transmission name="bed_fl_steering_wheel_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="bed_fl_steering_wheel">
		<hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      </joint>
	  <actuator name="bed_fl_steering_wheel_motor">
		<hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
		<mechanicalReduction>30</mechanicalReduction>
      </actuator>
	</transmission>

	<transmission name="bed_fr_steering_wheel_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="bed_fr_steering_wheel">
