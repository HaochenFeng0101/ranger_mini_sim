<?xml version="1.0"?>

<robot name="ranger_mini_bed_trolley" 
    xmlns:xacro="http://ros.org/wiki/xacro">

    <!-- Material definitions -->
    <material name="black">
        <color rgba="0.1 0.1 0.1 1" />
    </material>
    <material name="white">
        <color rgba="1 1 1 1" />
    </material>
    <material name="dark_grey">
        <color rgba="0.3 0.3 0.3 1" />
    </material>
    <material name="metallic_grey">
        <color rgba="0.7 0.7 0.7 1" />
    </material>
    <material name="bed_blue">
        <color rgba="0.2 0.4 0.8 1" />
    </material>
    <material name="bed_white">
        <color rgba="0.95 0.95 0.95 1" />
    </material>
    <material name="bed_metal">
        <color rgba="0.6 0.6 0.6 1" />
    </material>

    <!-- Base link -->
    <link name="base_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0"/>
            <mass value="7.5"/>
            <inertia ixx="0.5" ixy="0.0" ixz="0.0" iyy="0.5" iyz="0.0" izz="0.5"/>
        </inertial>
        <collision>
            <origin xyz="0 0 -0.1" rpy="0 0 0" />
            <geometry>
                <box size="0.5 0.35 0.2"/>
            </geometry>
        </collision>
    </link>
    
    <!-- Dummy link for mesh orientation -->
    <link name="base_mesh">
        <visual>
            <origin xyz="0 0 0" rpy="1.57 0 3.14" />
            <geometry>
                <mesh filename="package://ranger_mini_v2/meshes/ranger_base.dae" />
            </geometry>
            <material name="metallic_grey" />
        </visual>
    </link>
    <joint name="base_mesh_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_mesh"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <!-- Support cylinder for bed -->
    <link name="bed_support_link">
        <inertial>
            <origin xyz="0.0 0.0 0.4"/>
            <mass value="5"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0.2" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.05" length="0.8"/>
            </geometry>
            <material name="bed_metal"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.2" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.05" length="0.8"/>
            </geometry>
        </collision>
    </link>

    <joint name="bed_support_joint" type="fixed">
        <origin xyz="-0.2 0 0.15" rpy="0 0 0" />
        <parent link="base_link"/>
        <child link="bed_support_link"/>
    </joint>

    <!-- Bed structure -->
    <link name="bed_frame_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0"/>
            <mass value="15"/>
            <inertia ixx="0.5" ixy="0.0" ixz="0.0" iyy="0.5" iyz="0.0" izz="0.5"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="1.8 0.8 0.1"/>
            </geometry>
            <material name="bed_metal"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="1.8 0.8 0.1"/>
            </geometry>
        </collision>
    </link>

    <joint name="bed_frame_joint" type="fixed">
        <origin xyz="0 0 0.6" rpy="0 0 0" />
        <parent link="bed_support_link"/>
        <child link="bed_frame_link"/>
    </joint>

    <!-- Bed mattress -->
    <link name="bed_mattress_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0"/>
            <mass value="8"/>
            <inertia ixx="0.3" ixy="0.0" ixz="0.0" iyy="0.3" iyz="0.0" izz="0.3"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="1.7 0.7 0.08"/>
            </geometry>
            <material name="bed_blue"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="1.7 0.7 0.08"/>
            </geometry>
        </collision>
    </link>

    <joint name="bed_mattress_joint" type="fixed">
        <origin xyz="0 0 0.09" rpy="0 0 0" />
        <parent link="bed_frame_link"/>
        <child link="bed_mattress_link"/>
    </joint>

    <!-- Bed headboard -->
    <link name="bed_headboard_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0"/>
            <mass value="3"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="0.05 0.8 0.4"/>
            </geometry>
            <material name="bed_white"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="0.05 0.8 0.4"/>
            </geometry>
        </collision>
    </link>

    <joint name="bed_headboard_joint" type="fixed">
        <origin xyz="0.925 0 0.2" rpy="0 0 0" />
        <parent link="bed_frame_link"/>
        <child link="bed_headboard_link"/>
    </joint>



   <link name="fl_steering_wheel_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0"/>
            <mass value="1"/>
            <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
        </inertial>
        <visual>
            <origin xyz="-0.23 -0.194 0.1" rpy="-3.14 0 3.14 " />
            <geometry>
                    <mesh filename="package://ranger_mini_v2/meshes/fl.stl" />
            </geometry>
            <material name="dark_grey" />
        </visual>
        <collision>
            <origin xyz="0 0 0.008" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.001" length="0.001"/>
            </geometry>
        </collision>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.001" length="0.001"/>
            </geometry>
        </collision>
    </link>
    <joint name="bed_fl_steering_wheel" type="revolute">
        <origin xyz="0.23 0.206 -0.1" rpy="0 0 0" />
        <parent link="base_link"/>
        <child link="fl_steering_wheel_link"/>
        <axis xyz="0 0 1" rpy="0 0 0" />
        <limit effort="5" velocity="6.28"  lower="-2.1" upper="2.1" />
        <dynamics damping="0.5" friction="0.1"/>
    </joint>

        <link name="fl_wheel_link">
            <inertial>
                <mass value="4" />
                <origin xyz="0 0 0" />
                <inertia ixx="0.1171" ixy="0" ixz="0" iyy="0.1361" iyz="0" izz="0.1171" />
            </inertial>
            <visual>
                <origin xyz="0 0 0" rpy="1.57 0 0" />
                <geometry>
                    <cylinder length="0.01" radius="0.01" />
                </geometry>
                <material name="black" />
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="1.57 0 0" />
                <geometry>
                    <cylinder length="0.08" radius="0.08" />
                </geometry>
                     <contact>
                         <ode>
                        <min_depth>0.001</min_depth>
                         </ode>
                    </contact>
            </collision>
        </link>

        <joint name="bed_fl_wheel" type="continuous">
            <origin xyz="0.0 0.0 -0.12" rpy="0 0 0" />
            <parent link="fl_steering_wheel_link"/>
            <child link="fl_wheel_link"/>
            <axis xyz="0 1 0" rpy="0 0 0" />
            <dynamics damping="0.5" friction="0.1"/>
        </joint>


