<launch>  
   <arg name="init_x" value="0"/>
   <arg name="init_y" value="0"/>
   <arg name="init_z" value="1"/>

   <!-- SE2 Drone Simulator -->
   <node pkg="se2_control" type="se2_drone_simulator.py" name="se2_drone_simulator" output="screen" />
 
   <!-- SE2 Drone Controller (2D only) -->
   <node pkg="se2_control" type="se2_drone_controller.py" name="se2_drone_controller" output="screen" />

   <!-- Trajectory Visualizer -->
   <node pkg="se2_control" type="trajectory_visualizer.py" name="trajectory_visualizer" output="screen" />

   <!-- Test pose publisher (run separately) -->
   <!-- <node name="drone_test_pose_publisher" pkg="se2_control" type="drone_test_pose_publisher.py" output="screen" /> -->

   <!-- Visualization -->
  <node pkg="odom_visualization" name="odom_visualization" type="odom_visualization" output="screen">
        <remap from="~odom" to="/sim/odom"/>
        <param name="color/a" value="0.5"/>    
        <param name="color/r" value="0.0"/>        
        <param name="color/g" value="1.0"/>        
        <param name="color/b" value="0.0"/>       
        <param name="covariance_scale" value="100.0"/>       
        <param name="robot_scale" value="1.0"/>
        <param name="tf45" value="true"/>
  </node>

   <node name="rviz" pkg="rviz" type="rviz"
      args="-d $(find so3_quadrotor_simulator)/config/rviz.rviz"
      />
 </launch> 